<Window x:Class="SorteringsSystem.Views.TaskDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Details" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Border CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Padding="20" Background="White">
        <ScrollViewer>
            <StackPanel>
                <Button Content="✕" HorizontalAlignment="Right" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#555"
                        Click="Close_Click"/>
                <TextBox Text="{Binding Task.Title, Mode=TwoWay}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" BorderThickness="0" Background="Transparent"/>
                <TextBlock Text="Description" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Task.Description, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="80" BorderBrush="#CCC" BorderThickness="1" Padding="8"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,10" HorizontalAlignment="Stretch">
                    <StackPanel Width="150">
                        <TextBlock Text="Status" FontWeight="Bold"/>
                        <ComboBox SelectedItem="{Binding Status}" Margin="0,5,0,0">
                            <ComboBoxItem Content="Rejected"/>
                            <ComboBoxItem Content="In Progress"/>
                            <ComboBoxItem Content="Working"/>
                            <ComboBoxItem Content="Completed"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Width="150" Margin="20,0,0,0">
                        <TextBlock Text="Priority" FontWeight="Bold"/>
                        <ComboBox SelectedItem="{Binding Priority}" Margin="0,5,0,0">
                            <ComboBoxItem Content="Low"/>
                            <ComboBoxItem Content="Medium"/>
                            <ComboBoxItem Content="High"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Width="150" Margin="20,0,0,0">
                        <TextBlock Text="Complexity" FontWeight="Bold"/>
                        <ComboBox SelectedItem="{Binding Complexity}" Margin="0,5,0,0">
                            <ComboBoxItem Content="Trivial"/>
                            <ComboBoxItem Content="Simple"/>
                            <ComboBoxItem Content="Moderate"/>
                            <ComboBoxItem Content="Complex"/>
                            <ComboBoxItem Content="Critical"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="Subtasks" FontWeight="Bold" Margin="0,10,0,5"/>
                <ItemsControl ItemsSource="{Binding SubTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBox Text="{Binding Title, Mode=TwoWay}" FontWeight="Bold" BorderBrush="#CCC" BorderThickness="1" Padding="5"/>
                                <TextBox Text="{Binding Text, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="60" BorderBrush="#CCC" BorderThickness="1" Padding="5" Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="+ Add Subtask" Command="{Binding AddSubTaskCommand}" Margin="0,10,0,10" Background="#1976D2" Foreground="White" Padding="8" BorderThickness="0" Width="150"/>
                <TextBlock Text="Notes" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Note, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" Height="60" BorderBrush="#CCC" BorderThickness="1" Padding="8"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Delete" Width="100" Margin="0,0,10,0" Background="#D32F2F" Foreground="White" BorderThickness="0"
                            Command="{Binding DeleteTaskCommand}" Click="Close_Click"/>
                    <Button Content="Save" Width="100" Background="#388E3C" Foreground="White" BorderThickness="0"
                            Command="{Binding SaveTaskCommand}" Click="Close_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>